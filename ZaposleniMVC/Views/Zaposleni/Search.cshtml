@model ZaposleniMVC.Models.Odgovor



<header>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Zaposleni" asp-action="IndexAdministrator" class="navbar-brand"></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a asp-area="" asp-controller="Zaposleni" asp-action="IndexAdministrator">Zaposleni</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Raspored" asp-action="Index">Raspored</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Kompanija" asp-action="Index">Kompanija</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Zaposleni" asp-action="Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>



<h3>Zaposleni: </h3>
<hr />
<form asp-controller="Zaposleni" asp-action="Search" method="post">
    <div class="container">
        <p>
            <br />
            <input name="pretraga" type="text" />
            <input type="submit" value="Pretrazi" class="btn btn-sm btn-default" style=" position:absolute; left:320px" />
            <a asp-controller="Zaposleni" asp-action="Search" class="btn btn-sm btn-default" style=" position:absolute; left:390px">Resetuj</a>
            <h6 id="nema" style="color:red"></h6>

        </p>
    </div>
</form>


@if (!(Model.Zaposleni is null) && Model.Zaposleni.Count() > 0)
{
    <div class="table-bordered" id="tabela">
        <table class="table">
            <tr>
                <th> @Html.Encode("Ime")</th>
                <th>@Html.Encode("Prezime")</th>
                <th>@Html.Encode("Email")</th>
                <th>Operacije</th>
                @foreach (var i in Model.Zaposleni)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(m => i.Ime)
                    </td>
                    <td>
                        @Html.DisplayFor(m => i.Prezime)
                    </td>
                    <td>
                        @Html.DisplayFor(m => i.Email)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@i.OsobaID" class="btn btn-sm btn-default">Izmeni</a>
                        <a asp-action="Details" asp-route-id="@i.OsobaID" class="btn btn-sm btn-success">Detalji</a>
                        <a asp-action="Delete" asp-route-id="@i.OsobaID" class="btn btn-sm btn-danger">Obrisi</a>

                    </td>
                </tr>
            }


            </table>

        </div>
    }
    else
    {
        <h3>Nema zaposlenih jos!</h3>
    }

@if (Model.Poruka == "Ne")
{
    <script>
        document.getElementById('tabela').style.borderColor = 'red';
        document.getElementById('tabela').style.borderWidth = '2px';
    </script>
}


