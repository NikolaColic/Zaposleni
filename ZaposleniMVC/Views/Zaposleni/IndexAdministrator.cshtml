</header>


<h3>Zaposleni: </h3>
<hr />
@*<form asp-controller="Zaposleni" method="post" asp-action="Sort">*@
<div class="container">
    <p>
        <br />
        <select name="Sort" id="sortID" class="checkbox-inline">
            <option value="Ime">Ime</option>
            <option value="Prezime">Prezime</option>
            <option value="Email">Email</option>

        </select>
        <input type="submit" id="btnSort" value="Sortiraj" class="btn btn-sm btn-primary" style="background-color:blue;  position:absolute; left:300px" />

    </p>
</div>
@*</form>*@


@if (Model.Count() > 0)
{
    <div id="dodaj">
        <div class="table-bordered">
            <table class="table">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Ime)</th>
                    <th>@Html.DisplayNameFor(m => m.Prezime)</th>
                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                    <th>Operacije</th>
                    @foreach (var i in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => i.Ime)
                        </td>
                        <td>
                            @Html.DisplayFor(m => i.Prezime)
                        </td>
                        <td>
                            @Html.DisplayFor(m => i.Email)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@i.OsobaID" class="btn btn-sm btn-success">Izmeni</a>

                            <a asp-action="Delete" asp-route-id="@i.OsobaID" class="btn btn-sm btn-danger">Obrisi</a>

                            <a asp-action="Kreiraj" asp-route-id="@i.OsobaID" class="btn btn-sm btn-default">Kreiraj</a>
                        </td>
                    </tr>
                }


                </table>

            </div>
        </div>
    }
    else
    {
        <h3>Nema zaposlenih jos!</h3>
    }
<div class="container">
    <p>
        <br />
        <a asp-action="Create" asp-controller="Zaposleni" class="btn btn-sm btn-primary"> Kreiraj zaposlenog</a>
        <a asp-action="Search" asp-controller="Zaposleni" class="btn btn-sm btn-success" style="position:absolute; right:150px"> Pretraga</a>
    </p>

</div>

<input type="button" onclick="pdfPrikazi()" value="Prikazi"/>

<script>
    function pdfPrikazi() {
        window.open("../ZaposleniIteh/StevanRadovanovic550.pdf");
        
    }
</script>