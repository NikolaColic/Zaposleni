@model ZaposleniMVC.Models.Odgovor
@{
    ViewData["Title"] = "Edit";
}


<header>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Zaposleni" asp-action="IndexAdministrator" class="navbar-brand"></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a asp-area="" asp-controller="Zaposleni" asp-action="IndexAdministrator">Zaposleni</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Raspored" asp-action="Index">Raspored</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Kompanija" asp-action="Index">Kompanija</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Zaposleni" asp-action="Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>



<form asp-controller="Raspored" asp-action="Edit" method="post" style="margin-top: 50px">
    <div class="container">

        <input asp-for="Ras.Administrator" hidden />
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Ras.Datum"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Ras.Datum" class="form-control" readonly />
                    <input asp-for="Ras.RasporedID" hidden />
                </div>

            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Ras.Smena"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Ras.Smena" class="form-control" />
                </div>

            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Ras.Obavestenje"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Ras.Obavestenje" class="form-control" />

                </div>

            </div>
        </div>

        <br />
        <div class="form-group">
            <input type="submit" value="Izmeni" class="btn btn-sm btn-primary" />
            <a asp-action="Index" class="btn btn-sm btn-primary">Vrati nazad</a>
            <h6 id="poruka"></h6>



            <br />

        </div>
    </div>

</form>

@if (!(Model.Poruka is null) && Model.Poruka != "")
{
    if (Model.Poruka == "Uspesno")
    {
        <script>
            document.getElementById('poruka').innerText = "Uspesno ste kreirali raspored!";
            document.getElementById('poruka').style.color = 'green';
        </script>
    }
    else if (Model.Poruka == "Ne")
    {
        <script>
            document.getElementById('poruka').innerText = "Sistem ne moze da kreira raspored!";
            document.getElementById('poruka').style.color = 'red';
        </script>
    }
    else
    {
        <script>
            document.getElementById('poruka').innerText = "Postoji vec kreiran raspored!";
            document.getElementById('poruka').style.color = 'red';
        </script>
    }
}
